var discord = require('discord.js');
var client = new discord.Client();
var token = "NDY1MTA4MjU5MzMwNTg4Njg0.DiIwuQ.6gYSEJ2TIyYZqDCdRENI_yw3c38"
client.login(token)

client.on("ready", () => {
  client.user.setGame(`Making HL3`);
